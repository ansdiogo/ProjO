eureka:
  client:
    service-url:
      default-zone: ${EUREKA_URI:http://localhost:8761/eureka}
  instance:
    hostname: localhost
server:
  port: 8081
spring:
  application:
    name: API-GATEWAY-SERVICE
  main:
    web-application-type: REACTIVE
  cloud: 
    gateway: 
      routes: 
        - id: parametrizacao_service
          uri: http://localhost:6061
          predicates: 
            - Path=/rest/**
          filters:
            - StripPrefix=1
            - name: RequestSize
              args:
                maxSize: 5000000
        - id: execucao_service
          uri: http://localhost:8761
          predicates: 
            - Path=/rest/**
          filters:
            - StripPrefix=1
            - name: RequestSize
              args:
                maxSize: 5000000