package br.gov.am.prodam.folha.routes;

package br.gov.am.prodam.folha.routes;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

@Service
public class RoutesConfigService {

    private final RoutesRepository apiConfigRepository;

    @Autowired
    public RoutesConfigService(RoutesRepository apiConfigRepository) {
        this.apiConfigRepository = apiConfigRepository;
    }

    public RoutesApiConfig salvarApiConfig(RoutesApiConfig apiConfig) {
        return apiConfigRepository.salvar(apiConfig);
    }
}
